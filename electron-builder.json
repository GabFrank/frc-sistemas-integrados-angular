{
  "asar": false,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json"
  ],
  "extraResources": [
    {
      "from": "dist",
      "to": "app",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "icon": "./app/icons/logo.ico",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": false,
    "installerIcon": "./app/icons/logo.ico",
    "uninstallerIcon": "./app/icons/logo_uninstall.ico",
    "guid": "FRC",
    "include": "app/installer.nsh",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "FRC"
  },
  "portable": {
    "splashImage": "dist/assets/logo_inicio.bmp"
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": ["AppImage"]
  },
  "afterAllArtifactBuild": "./afterAllArtifactBuild.js"
}
